<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.food_delivery_system.ProcessOrdersController" spacing="10" alignment="CENTER">
    <Label text="Process Orders" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <TableView fx:id="ordersTable" prefWidth="500" prefHeight="300" />
    <Button text="Accept Order" onAction="#acceptOrder" prefWidth="200" />
    <Button text="Mark as Processed" onAction="#markAsProcessed" prefWidth="200" />
    <Button mnemonicParsing="false" onAction="#backToDashboard" text="Back" />
</VBox>
