<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="274.0" prefWidth="286.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.food_delivery_system.LoginRegisterController">
    <Label text="Login">
      <font>
         <Font name="Calibri Bold" size="18.0" />
      </font></Label>
   <Pane focusTraversable="true" prefHeight="203.0" prefWidth="298.0">
      <children>
          <ComboBox fx:id="roleComboBox" layoutX="14.0" layoutY="101.0" promptText="Select Role" />
          <Button layoutX="218.0" layoutY="101.0" onAction="#handleLogin" text="Login" />
          <Button layoutX="14.0" layoutY="138.0" onAction="#goToRegister" text="New Customer?" />
          <TextField fx:id="usernameField" layoutX="97.0" layoutY="29.0" prefHeight="25.0" prefWidth="167.0" promptText="Enter Username" />
          <PasswordField fx:id="passwordField" layoutX="97.0" layoutY="61.0" prefHeight="25.0" prefWidth="167.0" promptText="Enter Password" />
         <Label layoutX="14.0" layoutY="33.0" text="Username" />
         <Label layoutX="14.0" layoutY="65.0" text="Password" />
      </children>
   </Pane>
    <Label fx:id="statusLabel" textFill="RED" />
</VBox>
